@model Recipes.ViewModels.NavBarViewModel

<nav class="navbar navbar-expand-lg navbar-dark bg-dark ftco-navbar-light" id="ftco-navbar">
    <div class="container">
        <a class="navbar-brand" href="index.html">Foody<span>.</span></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="oi oi-menu"></span> Menu
        </button>

        <div class="collapse navbar-collapse" id="ftco-nav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active"><a asp-controller="Home" asp-action="Recipes" class="nav-link">Home</a></li>

                @if (Model.IsLoggedIn)
                {
                    if (Model.IsChef)
                    {
                        <li class="nav-item"><a href="javascript:Recipes.getAddRecipeView()" class="nav-link">Add Recipe</a></li>
                    }

                    <li class="nav-item"><a asp-controller="Authentication" asp-action="Logout" class="nav-link">@("Log out " + Model.UserName)</a></li>
                }
                else
                {
                    <li class="nav-item"><a href="javascript:Authentication.login()" class="nav-link">Sign in</a></li>
                }
            </ul>
        </div>
    </div>
</nav>
